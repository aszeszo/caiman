include ../../Makefile.cmd

all:=		TARGET=	all
clean:=		TARGET=	clean
clobber:=	TARGET=	clobber
install:=	TARGET=	install

PYMODULES=	bootroot_initialize.py \
		bootroot_archive.py \
		grub_setup.py

PYCMODULES=	$(PYMODULES:%.py=%.pyc)

DC_UTIL_FILES=	mkrepo \
		create_iso \
		create_usb \
		bootroot_configure \
		bootroot_strip \
		pre_bootroot_pkg_image_mod \
		post_bootroot_pkg_image_mod \
		$(PYMODULES)

# Note: PYCMODULES are not delivered.
# They are only compiled for error checking purposes.
ROOTDC_UTIL_FILES=	$(DC_UTIL_FILES:%=$(ROOTDC)/%)

all:		python

clean:
		$(RM) $(PYCMODULES)

clobber: clean

install:	all .WAIT $(ROOTDC) \
		$(ROOTDC_UTIL_FILES)

python:
		$(PYTHON) -m compileall -l $(@D)


include ../../Makefile.targ
